@model Lshp.OpenIDConnect.Models.ErrorViewModel
@{
    var error = Model?.Error?.Error;
    var request_id = Model?.Error?.RequestId;
}
<div class="card mt-4">
    <div class="card-block">

        <div class="form-header form-header-custom">
            <h1>Error</h1>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="alert alert-danger">
                    Sorry, there was an error
                    @if (error != null)
                    {
                        <strong>
                            <em>
                                : @error
                            </em>
                        </strong>
                    }
                </div>
                @if (request_id != null)
                {
                    <div class="request-id">Request Id: @request_id</div>
                    @Model.Error.UiLocales
                }
            </div>
        </div>
    </div>
</div>